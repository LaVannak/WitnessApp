<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WitnessProject.Pages.SignUpPage">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Image Source="wlogo.png" Grid.Row="0" Margin="0,40,0,0" HeightRequest="200" WidthRequest="200"/>

            <StackLayout Grid.Row="1" Margin="40,20,40,0">
                <Entry Placeholder="Email" PlaceholderColor="#707070" x:Name="EntEmail"/>
                <Entry Placeholder="Password" PlaceholderColor="#707070" x:Name="EntPassword" IsPassword="True"/>
                <Entry Placeholder="Confirm Password" PlaceholderColor="#707070" x:Name="EntConfirmPassword" IsPassword="True"/>
                <Button Text="Sign Up" TextColor="White" BackgroundColor="#C62739"
                        x:Name="BtnSignUp" />
            </StackLayout>

        </Grid>
    </ContentPage.Content>
</ContentPage>